{
  "search.exclude": {
    "**/build": true,
    "**/dist": true,
    "**/electron/external": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/app/public/fonts/*": true
  },
  "git.detectSubmodules": false, // prevent electron/external/tldr from showing up
  "rust-analyzer.linkedProjects": [
    "electron/native/Cargo.toml",
    "electron\\native\\Cargo.toml"
  ]
}
