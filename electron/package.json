{
  "name": "termy-electron",
  "version": "0.1.1",
  "scripts": {
    "dev": "wait-on http://localhost:8080 && cross-env NODE_ENV=development webpack --watch",
    "build": "cross-env NODE_ENV=production webpack && yarn build:react && electron-builder",
    "release": "yarn build:react && GH_TOKEN=<TOKEN> electron-builder --publish=always",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "app.termy",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.png"
    },
    "productName": "Termy",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin"
    ],
    "publish": {
      "provider": "github"
    },
    "nodeGypRebuild": false
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "copy-webpack-plugin": "^6.3.1",
    "cross-env": "^7.0.2",
    "electron": "8.5.3",
    "electron-builder": "^22.9.1",
    "electron-debug": "^3.1.0",
    "electron-devtools-installer": "^3.1.1",
    "electron-is-dev": "^1.2.0",
    "fix-path": "^3.0.0",
    "node-loader": "^1.0.2",
    "ts-loader": "^8.0.11",
    "typescript": "^4.0.5",
    "wait-on": "^5.2.0",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "webpack-electron-reload": "^1.0.1"
  }
}
