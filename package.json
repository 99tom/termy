{
  "name": "termy",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "webpack && electron .",
    "start": "snowpack dev --polyfill-node",
    "build": "snowpack build",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
    "test": "jest",
    "postinstall": "electron-build-env neon build --release"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@stitches/react": "0.0.3-canary.1",
    "native": "file:./native/lib",
    "path": "^0.12.7",
    "react-portal": "^4.2.1",
    "react-syntax-highlighter": "^13.5.3",
    "react-use": "^15.3.4",
    "slate": "^0.59.0",
    "slate-history": "^0.59.0",
    "slate-react": "^0.59.0",
    "use-dark-mode": "^2.3.1",
    "uuid": "^8.3.0",
    "xterm": "^4.9.0",
    "xterm-addon-fit": "^0.4.0",
    "zustand": "^3.1.3"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@snowpack/app-scripts-react": "^1.12.2",
    "@snowpack/plugin-dotenv": "^2.0.3",
    "@snowpack/plugin-react-refresh": "^2.3.1",
    "@snowpack/plugin-typescript": "^1.0.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/user-event": "^12.1.6",
    "@types/copy-webpack-plugin": "^6.0.0",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.5",
    "@types/react": "^16.9.50",
    "@types/react-dom": "^16.9.8",
    "@types/react-portal": "^4.0.2",
    "@types/react-syntax-highlighter": "^11.0.5",
    "@types/snowpack-env": "^2.3.0",
    "@types/uuid": "^8.3.0",
    "@types/webpack": "^4.41.22",
    "copy-webpack-plugin": "^6.2.0",
    "electron": "^10.1.3",
    "electron-build-env": "^0.2.0",
    "electron-builder": "^22.8.1",
    "electron-rebuild": "^2.2.0",
    "jest": "^26.5.2",
    "neon-cli": "^0.4.2",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "snowpack": "^2.13.3",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  }
}
