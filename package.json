{
  "name": "termy",
  "description": "An easy to use terminal. Termy has autosuggestions, a modern GUI (HTML), structured data piping and many others.",
  "author": "Marton Langa",
  "version": "0.1.1",
  "private": true,
  "homepage": "./",
  "scripts": {
    "dev": "yarn start",
    "start": "concurrently \"cross-env BROWSER=none yarn react:start\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development webpack --watch\"",
    "build": "cross-env NODE_ENV=production webpack && yarn build:react && electron-builder",
    "release": "yarn build:react && GH_TOKEN=<TOKEN> electron-builder --publish=always",
    "test": "react-scripts test",
    "react:start": "cross-env BROWSER=none react-scripts start",
    "build:react": "react-scripts build",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "app.termy",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.png"
    },
    "productName": "Termy",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin"
    ],
    "publish": {
      "provider": "github"
    },
    "nodeGypRebuild": false
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@stitches/react": "^0.0.3-canary.4",
    "date-fns": "^2.16.1",
    "electron-is-dev": "^1.2.0",
    "fix-path": "^3.0.0",
    "immer": "^7.0.14",
    "path": "^0.12.7",
    "react-portal": "^4.2.1",
    "react-syntax-highlighter": "^13.5.3",
    "react-use": "^15.3.4",
    "slate": "^0.59.0",
    "slate-history": "^0.59.0",
    "slate-react": "^0.59.0",
    "uuid": "^8.3.0",
    "xterm": "^4.9.0",
    "xterm-addon-fit": "^0.4.0",
    "zustand": "^3.1.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/copy-webpack-plugin": "^6.0.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-portal": "^4.0.2",
    "@types/react-syntax-highlighter": "^11.0.5",
    "@types/uuid": "^8.3.0",
    "@types/webpack": "^4.41.22",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^6.2.0",
    "cross-env": "^7.0.2",
    "electron": "8.5.3",
    "electron-builder": "^22.8.1",
    "electron-debug": "^3.1.0",
    "electron-devtools-installer": "^3.1.1",
    "node-loader": "^1.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3",
    "ts-loader": "^8.0.4",
    "typescript": "~3.7.2",
    "wait-on": "^5.2.0",
    "webpack-cli": "^3.3.12",
    "webpack-electron-reload": "^1.0.1"
  }
}
