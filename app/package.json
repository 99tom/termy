{
  "name": "termy",
  "description": "An easy to use terminal. Termy has autosuggestions, a modern GUI (HTML), structured data piping and many others.",
  "author": "Marton Langa",
  "version": "0.1.1",
  "homepage": "./",
  "scripts": {
    "dev": "SNOWPACK_PUBLIC_NODE_ENV=development snowpack dev",
    "build": "snowpack build && rm -rf ../electron/build && mv build ../electron",
    "test": "web-test-runner \"src/**/*.test.tsx\"",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
    "sync": "cp types/shared.d.ts ../electron/shared.d.ts"
  },
  "dependencies": {
    "@stitches/react": "^0.0.3-canary.4",
    "date-fns": "^2.16.1",
    "immer": "^7.0.14",
    "path": "^0.12.7",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-portal": "^4.2.1",
    "react-syntax-highlighter": "^13.5.3",
    "react-use": "^15.3.4",
    "slate": "^0.59.0",
    "slate-history": "^0.59.0",
    "slate-react": "^0.59.0",
    "uuid": "^8.3.0",
    "xterm": "^4.9.0",
    "xterm-addon-fit": "^0.4.0",
    "zustand": "^3.1.3"
  },
  "devDependencies": {
    "@snowpack/plugin-dotenv": "^2.0.4",
    "@snowpack/plugin-react-refresh": "^2.3.7",
    "@snowpack/plugin-typescript": "^1.1.0",
    "@snowpack/plugin-webpack": "^2.1.1",
    "@snowpack/web-test-runner-plugin": "^0.1.4",
    "@testing-library/react": "^11.0.0",
    "@types/chai": "^4.2.13",
    "@types/electron": "^1.6.10",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.8",
    "@types/react-portal": "^4.0.2",
    "@types/react-syntax-highlighter": "^13.5.0",
    "@types/snowpack-env": "^2.3.2",
    "@types/uuid": "^8.3.0",
    "@web/test-runner": "^0.9.7",
    "chai": "^4.2.0",
    "snowpack": "^2.17.1",
    "typescript": "^4.0.0"
  }
}
